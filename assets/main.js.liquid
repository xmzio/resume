var listitems_as_badges_lists = document.querySelectorAll(".listitems_as_badges ul");
for( let i=0; i < listitems_as_badges_lists.length; i++) {
  listitems_as_badges_lists[i].classList.add("list-unstyled");
}

var listitems_as_badges_items = document.querySelectorAll(".listitems_as_badges li");
for( let i=0; i < listitems_as_badges_items.length; i++) {
  listitems_as_badges_items[i].classList.add("badge");
  listitems_as_badges_items[i].classList.add("text-bg-secondary");
  listitems_as_badges_items[i].classList.add("listitems_as_badges_items");
}

var resume_section_experiencePrevious = document.getElementById('resume_section_experiencePrevious');
var resume_section_experiencePrevious_revealButton = document.getElementById('resume_section_experiencePrevious_revealButton');
resume_section_experiencePrevious.addEventListener('hide.bs.collapse', function () {
  resume_section_experiencePrevious_revealButton.innerHTML = 'Show';
});
resume_section_experiencePrevious.addEventListener('show.bs.collapse', function () {
  resume_section_experiencePrevious_revealButton.innerHTML = 'Hide';
});